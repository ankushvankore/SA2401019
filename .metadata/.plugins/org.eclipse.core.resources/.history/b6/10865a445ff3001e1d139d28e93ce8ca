package com.Assignments;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class A02EchoEcho_CheckBox {

	public static void main(String[] args) {
		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		
		driver.get("https://echoecho.com/htmlforms09.htm");
		
		WebElement milkChkBox = driver.findElement(By.name("option1"));
		WebElement butterChkBox = driver.findElement(By.name("option2"));
		WebElement cheeseChkBox = driver.findElement(By.name("option3"));
	
		System.out.println("Before...");
		System.out.println("Milk Selected: " + milkChkBox.isSelected());
		System.out.println("Milk Visible : " + milkChkBox.isDisplayed());
		System.out.println("Milk Enable  : " + milkChkBox.isEnabled());
		
		if(milkChkBox.isSelected() == false)
			milkChkBox.click();
		
		System.out.println("After...");
		System.out.println("Milk Selected: " + milkChkBox.isSelected());
		System.out.println("Milk Visible : " + milkChkBox.isDisplayed());
		System.out.println("Milk Enable  : " + milkChkBox.isEnabled());
	}

}
